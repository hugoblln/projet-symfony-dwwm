{% extends 'base.html.twig' %}

{% block title %}
Connexion
{{parent()}}
{% endblock %}

{% block body %}
<section class="container mt-4">
<h1 class="text-center">Se connecter</h1>
{% if error %}
<div class=" text-center alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('app.login') }}" method="post" class="card p-3 w-50 mx-auto mt-3">
<div class="mb-3">
<label for="email" class="form-label">Email:</label>
<input type="email" class="form-control" id="email" name="_username" value="{{ lastUserName}}">
</div>
<div class="mb-3">
<label for="password" class="form-label">mot de passe:</label>
<input type="password" class="form-control" id="password" name="_password">
</div>

<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

<button type="submit" class="btn btn-primary">connexion</button>
</form>
</section>
{% endblock %} 